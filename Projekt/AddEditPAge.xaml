<Page x:Class="Projekt.AddEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Projekt"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="AddEditPAge">
    <Page.CommandBindings>
        <CommandBinding Command="local:Commands.ButtonCommand" Executed="ButtonCommandExecuted" CanExecute="ButtonCommandCanExecute" />
    </Page.CommandBindings>
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <Button Command="local:Commands.ButtonCommand" Name="EditButton" Content="Edytuj/Usuń" Margin="15" Padding="10"/>
            <Button Command="local:Commands.ButtonCommand" Name="AddButton" Content="Dodaj" Margin="15" Padding="10"/>
        </StackPanel>
    </Grid>
</Page>
