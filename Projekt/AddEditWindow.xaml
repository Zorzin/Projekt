<Window x:Class="Projekt.AddEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt"
        mc:Ignorable="d"
        Title="Dodaj/Edytuj" Height="300" Width="300">
    <Window.CommandBindings>
        <CommandBinding Command="local:Commands.ButtonCommand" Executed="ButtonCommandExecuted" CanExecute="ButtonCommandCanExecute" />
    </Window.CommandBindings>
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Command="local:Commands.ButtonCommand" Name="EditButton" Content="Edytuj/Usuń" Margin="15" Padding="10"/>
            <Button Command="local:Commands.ButtonCommand" Name="AddButton" Content="Dodaj" Margin="15" Padding="10"/>
            <Button Click="BackButton" Content="Cofnij" Margin="15" Padding="10"/>
        </StackPanel>
    </Grid>
</Window>
